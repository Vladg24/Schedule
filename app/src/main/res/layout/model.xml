<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    android:layout_height="200dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name"
            android:id="@+id/name_disciplines"
            android:padding="10dp"
            android:textColor="@color/colorPurple"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="num aud"
            android:textStyle="italic"
            android:id="@+id/name_Aud"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Teacher"
            android:lines="3"
            android:id="@+id/teacher"
            android:padding="10dp"
            android:layout_below="@+id/name_disciplines"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="50dp" />

        <TextView
            android:text="Час"
            android:layout_height="50dp"
            android:id="@+id/startLess"
            android:padding="10dp"
            android:lines="3"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/teacher"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="100dp" />

        <TextView
            android:text="Час"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/endLess"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:layout_alignBaseline="@+id/startLess"
            android:layout_alignBottom="@+id/startLess"
            android:layout_toRightOf="@+id/startLess"
            android:layout_toEndOf="@+id/startLess" />


    </RelativeLayout>

</android.support.v7.widget.CardView>